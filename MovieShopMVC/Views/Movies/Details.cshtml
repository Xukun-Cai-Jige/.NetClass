@model ApplicationCore.Models.MovieDetailModel;


<div class="row">
    <div class="col-4">
        <div class="rounded-3 overflow-hidden" style="height:480px;">
            <img src="@Model.PosterUrl"
                 alt="@Model.Title"
                 class="w-100 h-100 d-block"
                 style="object-fit:cover;" />
        </div>

    </div>
    <div class="col-8"
         style="position: relative;
                height: 480px;
                background-image: url('@Model.BackdropUrl');
                background-size: cover;
                background-position: center;
                border-radius: 10px;
                overflow: hidden;">
        <div style="position: absolute;
                    top: 0;
                    left: 0;
                    width: 100%;
                    height: 100%;
                    background: rgba(0, 0, 0, 0.45);
                    padding: 20px;">
            <h3 style="  color: white">@Model.Title</h3>
            <p class="fw-light" style="font-size: 1.1rem; color: white;">@Model.Overview</p>
        </div>
    </div>
</div>
<h5>Rating: @Model.Rating</h5>

<div class="row">
    <div class="col-3">
        <h5 class="mb-3 text-primary">🎬 Trailers</h5>
        @foreach (var trailer in Model.Trailers)
        {
            <p>
                <a href="@trailer.TrailerUrl" target="_blank" class="text-decoration-none">
                    @trailer.Name
                </a>
            </p>
        }
    </div>
    <div class="col-6">
        <h5 class="mb-3 text-primary">🎭 Casts</h5>
        @foreach (var cast in Model.Casts)
        {
            <div class="d-flex align-items-center mb-3">
                <img src="@cast.ProfilePath" alt="@cast.Name"
                     class="img-thumbnail me-3"
                     style="width:100px; height:150px; object-fit:cover;" />
                <p class="mb-0 fw-semibold">@cast.Name</p>
            </div>
        }
    </div>
</div>
